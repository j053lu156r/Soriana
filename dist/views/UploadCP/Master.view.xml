<mvc:View
    controllerName="demo.controllers.UploadCP.Master"
    xmlns:m="sap.m"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.ui.webc.main"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    height="100%"
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage class="sapUiContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent">
                <f:heading>
                    <vm:VariantManagement standardItemText="{appTxts>/tiles.titleCP.0002.cpUpload}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <l:Grid defaultSpan="L12 M7 S12" width="auto">
                <l:content>
                    <form:SimpleForm id="SimpleFormChange354" minWidth="1024" maxContainerCols="2" layout="ResponsiveLayout" editable="true" visible="true">
                        <form:content>
                        
                            <m:Label text="{appTxts>/cartaPorte.determinante}" labelFor="UCPComboBoxDet" />
                            <m:ComboBox id="UCPComboBoxDet" required="true" width="40%" items="{CedisModel>/Cedis}" showSecondaryValues= "true"> 
                                <core:ListItem key="{CedisModel>Ids_Num_UN}" text="{CedisModel>Ids_Num_UN} {CedisModel>Desc_UN}" additionalText="{CedisModel>Id_Num_UN}"/>
                            </m:ComboBox>

                            <m:Label text="{appTxts>/cartaPorte.operacion}" labelFor="UCPComboBoxOp"/>
                            <m:ComboBox id="UCPComboBoxOp" required="true" width="40%" items="{TipoOperModel>/TipoOperacion}">
                                <core:ListItem key="{TipoOperModel>Id_Num_TipoOper}" text="{TipoOperModel>Desc_TipoOper}"/>
                            </m:ComboBox>

                            <m:Label text="{appTxts>/cartaPorte.file}" labelFor="fuFile" />
                            <u:FileUploader id="fuTxt" width="40%" name="fuTxt" uploadComplete="handleUploadComplete" 
                                change="handleValueChange" style="Emphasized" fileType="txt"
                                uploadUrl="{oCartaPorte.sUrl}"/>
                        </form:content>
                    </form:SimpleForm>
                    <m:FlexBox alignItems="Center" justifyContent="Center">
                        <m:items>
                            <l:VerticalLayout class="sapUiContentPadding" width="100%">
                                <m:Label textAlign="Center" text="* {appTxts>/cartaPorte.note1}" />
                                <m:Label textAlign="Center" text="* {appTxts>/cartaPorte.note2}" />
                                <m:Label textAlign="Center" text="* {appTxts>/cartaPorte.note3}" />
                            </l:VerticalLayout>
                        </m:items>
                    </m:FlexBox>
                    <m:FlexBox alignItems="Center" justifyContent="Center">
                        <m:items>
                            <m:Button type="Accept" press="cpUploadPress" text="{appTxts>/cartaPorte.upload}" width="100%" />
                        </m:items>
                    </m:FlexBox>
                </l:content>
            </l:Grid>
        </f:content>
    </f:DynamicPage>
</mvc:View>
