<mvc:View
    controllerName="demo.controllers.DownloadCP.Master"
    xmlns:m="sap.m"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns="sap.ui.webc.main"
    xmlns:fiori="sap.ui.webc.fiori"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    height="100%"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage class="sapUiContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent">
                <f:heading>
                    <vm:VariantManagement standardItemText="{appTxts>/tiles.titleCP.0001.cpDownload}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <l:Grid defaultSpan="L12 M7 S12" width="auto">
                <l:content>
                    <form:SimpleForm id="SimpleFormChange354" minWidth="1024" maxContainerCols="2" layout="ResponsiveLayout" editable="true" visible="true">
                        <form:content>
                            <m:Label text="{appTxts>/cartaPorte.determinante}" labelFor="DCPComboBoxDet" />
                            <m:ComboBox id="DCPComboBoxDet" required="true" width="40%" items="{CedisModel>/Cedis}" showSecondaryValues= "true"> 
                                <core:ListItem key="{CedisModel>Ids_Num_UN}" text="{CedisModel>Ids_Num_UN} {CedisModel>Desc_UN}" additionalText="{CedisModel>Id_Num_UN}"/>
                            </m:ComboBox>

                            <m:Label text="{appTxts>/cartaPorte.operacion}" labelFor="DCPComboBoxOp"/>
                            <m:ComboBox id="DCPComboBoxOp" required="true" width="40%" items="{TipoOperModel>/TipoOperacion}">
                                <core:ListItem key="{TipoOperModel>Id_Num_TipoOper}" text="{TipoOperModel>Desc_TipoOper}"/>
                            </m:ComboBox>

                            <m:Label text="{appTxts>/cartaPorte.folio}" labelFor="DCPinputFolio" />
                            <Input id="DCPinputFolio" required="true" type="Number" width="40%"/>
                        </form:content>
                    </form:SimpleForm>
                    <m:FlexBox alignItems="Center" justifyContent="Center">
                        <m:items>
                            <m:Button type="Accept" press="onDownload" text="{appTxts>/cartaPorte.download}" width="100%" />
                        </m:items>
                    </m:FlexBox>
                </l:content>
            </l:Grid>
        </f:content>
    </f:DynamicPage>
</mvc:View>
