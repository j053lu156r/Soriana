<mvc:View
    controllerName="demo.controllers.TermsAndConds.Master"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc">

    <f:DynamicPage class="sapUiContentPadding">

        <f:title>
            <f:DynamicPageTitle backgroundDesign="Transparent">
                <f:heading>
                    <vm:VariantManagement standardItemText="{appTxts>/tiles.titleTC}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <Panel width="auto" height="100%">
                <l:VerticalLayout class="sapUiContentPadding" >
                    <!-- <html:iframe id="map_iframe" src="./assets/TermsAndConditions/termsandconditions.html" target="_top" width="100%" height="85%"/> -->
                    <Text text="Las transacciones que se realicen en este Portal estarán reguladas por los siguientes  Términos y Condiciones (TYC):" />
                    <l:HorizontalLayout class="sapUiContentPadding" >
                        <Button icon="sap-icon://download" press="onDownloadPN" text="{appTxts>/button.text.downloadPN}"/>
                        <Button icon="sap-icon://download" press="onDownloadPI" text="{appTxts>/button.text.downloadPI}"/>
                    </l:HorizontalLayout>
                </l:VerticalLayout>
            </Panel>
        </f:content>

    </f:DynamicPage>

</mvc:View>