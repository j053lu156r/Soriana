<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
	<Dialog title="{appTxts>/person.title}" horizontalScrolling="true">
		<Table noDataText="{appTxts>/person.noData}" fixedLayout="false" mode="SingleSelect"
			items="{ path : 'dialogUsr>/results', sorter : { path : 'bname', descending : false } }" id="nuevoCtto">
			<headerToolbar>
				<Toolbar visible="true" enabled="true" width="" design="Solid">
					<content>
						<SearchField placeholder="{appTxts>/person.search}" showSearchButton="true" search="buscaContacto" visible="true" width="100%"/>
						<Select xmlns="sap.m" id="selectFilterUsr">
						    <items>
						        <core:Item xmlns:core="sap.ui.core" key="bname" text="{appTxts>/person.id}"/>
						        <core:Item xmlns:core="sap.ui.core" key="name_text" text="{appTxts>/person.contact}"/>
						        </items>
						    
						</Select>
					</content>
				</Toolbar>
			</headerToolbar>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<Text text="{dialogUsr>bname}"/>
						<Text text="{dialogUsr>name_text}"/>
					</cells>
				</ColumnListItem>
			</items>
			<columns>
				<Column>
					<header>
						<Text text="{appTxts>/person.id} "/>
					</header>
				</Column>
				<Column>
					<header>
						<Text text="{appTxts>/person.contact} "/>
					</header>
				</Column>
			</columns>
		</Table>
			<buttons>
				<Button id="guardarCambio" text="{appTxts>/person.save}" press="saveNewUsr"/>
			</buttons>
			<buttons>
				<Button id="closeDialog" text="{appTxts>/person.close}" press="onCloseDialog"/>
			</buttons>
	</Dialog>
</core:FragmentDefinition>