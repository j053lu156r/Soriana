<mvc:View
    controllerName="demo.controllers.Dashboard.Master"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core">

    <IconTabBar
		id="idIconTabBar"
		class="sapUiResponsiveContentPadding"
        expandable="false">
		<items>
			<IconTabFilter
                icon="sap-icon://manager-insight"
                text="{appTxts>/dashboard.tab.title.repGeneral}"
                key="repGeneral">
				<f:DynamicPage class="sapUiContentPadding">
                    <f:header>
                        <f:DynamicPageHeader pinnable="true">
                            <f:content>
                                <fb:FilterBar id="filterBar"  header="Header" reset="onReset" search="searchData" 
                                    clear="clearFilters" cancel="onCancel" filtersDialogClosed="onFiltersDialogClosed" 
                                    showRestoreButton="false" showClearButton="false" useToolbar="false">
                                    <fb:filterGroupItems>
                                        <fb:FilterGroupItem groupName="__$INTERNAL$" name="Ab" 
                                            label="{appTxts>/dashboard.repGeneral.filter.supplier}" mandatory="true" 
                                            partOfCurrentVariant="true" visibleInFilterBar="true">
                                            <fb:control>
                                                <Input
                                                    id="supplierInput" placeholder="{appTxts>/dashboard.repGeneral.filter.supplier}" 
                                                    showSuggestion="true" valueHelpOnly="true"
                                                    showValueHelp="true" valueHelpRequest=".onValueHelpRequest" 
                                                    value="{configSite>/supplierInput}">
                                                </Input>
                                            </fb:control>
                                        </fb:FilterGroupItem>

                                        <fb:FilterGroupItem groupName="__$INTERNAL$" label="{appTxts>/dashboard.repGeneral.filter.date}" 
                                            groupTitle="FechaAlta" name="FechaAlta" partOfCurrentVariant="true" visibleInFilterBar="true">
                                            <fb:control>
                                                <DateRangeSelection id="dateRange" change="onChangeDate"/>
                                            </fb:control>
                                        </fb:FilterGroupItem>

                                        <fb:FilterGroupItem groupName="__$INTERNAL$" label="{appTxts>/dashboard.repGeneral.filter.tipo}" 
                                            groupTitle="Tipo" name="Tipo" partOfCurrentVariant="true" visibleInFilterBar="true">
                                            <fb:control>
                                                <ComboBox items="" showClearIcon="true">
                                                    <core:Item key="" text="" />
                                                </ComboBox>
                                            </fb:control>
                                        </fb:FilterGroupItem>
                                    </fb:filterGroupItems>
                                </fb:FilterBar>
                            </f:content>
                        </f:DynamicPageHeader>
                    </f:header>
                    <f:content>

                    </f:content>
                </f:DynamicPage>
			</IconTabFilter>
			<IconTabFilter 
                icon="sap-icon://company-view"
                text="{appTxts>/dashboard.tab.title.repSolGroup}"
                key="repSolGroup">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabFilter
                icon="sap-icon://timesheet"
                text="{appTxts>/dashboard.tab.title.repAvgTime}"
                key="repAvgTime">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabFilter
                icon="sap-icon://compare-2"
                text="{appTxts>/dashboard.tab.title.repCompExec}"
                key="repCompExec">
				<Text text="People content goes here ..." />
			</IconTabFilter>
            <IconTabFilter
                icon="sap-icon://supplier"
                text="{appTxts>/dashboard.tab.title.repAclarProv}"
                key="repAclarProv">
				<Text text="People content goes here ..." />
			</IconTabFilter>
            <IconTabFilter
                icon="sap-icon://idea-wall"
                text="{appTxts>/dashboard.tab.title.repAclarAnalyst}"
                key="repAclarAnalyst">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
    
</mvc:View>