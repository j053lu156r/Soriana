<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<Dialog id="dinamicTable" title="Select" draggable="true">
		<l:VerticalLayout>
			<Text text="Select the columns you want to display"/>
			<CheckBox text="select / deselect all"
				selected="{= ${/idfolio} || ${/idEstatus2}|| ${/idFAlta} || ${/idlifnr}|| ${/idDesAcla}|| ${/idFactura}|| ${/idMonRec}|| ${/idIvaRec}|| ${/idAnalista}|| ${/idFAlta2} || ${/idHalta}|| ${/idFvenc}|| ${/idMonacla}|| ${/idivaacla}|| ${/idNdoc}}"
				partiallySelected="{= !(${/idfolio} &amp;&amp; ${/idFAlta} &amp;&amp; ${/idlifnr}&amp;&amp; ${/idDesAcla}&amp;&amp; ${/idFactura}&amp;&amp; ${/idMonRec}&amp;&amp; ${/idIvaRec}&amp;&amp; ${/idEstatus2}&amp;&amp; ${/idAnalista}&amp;&amp; ${/idFAlta2}&amp;&amp; ${/idHalta}&amp;&amp; ${/idFvenc}&amp;&amp; ${/m}&amp;&amp; ${/idMonacla}&amp;&amp; ${/idivaacla}&amp;&amp; ${/idNdoc})}"
				select="onParentClicked"/>
			<c:HTML content="&lt;hr&gt;"/>
			<CheckBox text="{appTxts>/clarifications.headerFolio}" selected="{/idfolio}"/>
			<CheckBox text="{appTxts>/clarifications.headerDate}" selected="{/idFAlta}"/>
			<CheckBox text="{appTxts>/clarifications.headerSupplier}" selected="{/idlifnr}"/>
			<CheckBox text="{appTxts>/clarifications.headerType}" selected="{/idDesAcla}"/>
			<CheckBox text="{appTxts>/clarifications.headerInvoice}" selected="{/idFactura}"/>
			<CheckBox text="{appTxts>/clarifications.headerReclaimedAmount}" selected="{/idMonRec}"/>
			<CheckBox text="{appTxts>/clarifications.headerReclaimedTaxes}" selected="{/idIvaRec}"/>
			<CheckBox text="{appTxts>/clarifications.headerStatus}" selected="{/idEstatus2}"/>
			<CheckBox text="{appTxts>/clarifications.headerAnalyst}" selected="{/idAnalista}"/>
			<CheckBox text="{appTxts>/clarifications.headerAssignmentDate}" selected="{/idFAlta2}"/>
			<CheckBox text="{appTxts>/clarifications.headerAssignmentTime}" selected="{/idHalta}"/>
			<CheckBox text="{appTxts>/clarifications.headerSolutionDate}" selected="{/idFvenc}"/>
			<CheckBox text="{appTxts>/clarifications.headerClearedAmount}" selected="{/idMonacla}"/>
			<CheckBox text="{appTxts>/clarifications.headerClearedTaxes}" selected="{/idivaacla}"/>
			<CheckBox text="{appTxts>/clarifications.headerPayment}" selected="{/idNdoc}"/>
			
			
		</l:VerticalLayout>
		<buttons>
			<Button text="save and close" press="ClosepopUp"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>