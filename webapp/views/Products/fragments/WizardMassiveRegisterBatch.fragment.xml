<core:FragmentDefinition  controllerName="demo.controllers.Products.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
    xmlns:l="sap.ui.layout"
	xmlns:layout="sap.ui.layout">
	<Dialog
		id="massiveRegisterDialog"
		showHeader="false"
		verticalScrolling="false"
		contentHeight="45%"
		contentWidth="40%"
        >
		<f:DynamicPage
			toggleHeaderOnTitleClick="false"
			showFooter="true">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{appTxts>/products.titleMassiveRegister}"/>
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>

        <f:content>
		<l:VerticalLayout>

                    <MessageStrip class="sapUiSmallMarginBottom"
								text="{appTxts>/products.messageStripMassiveReg}"
								showIcon="true"/>

        <Label text="{appTxts>/products.personalBuyerEmail}" labelFor="correoInput" />
		<Input
			id="correoInput"
			placeholder="{appTxts>/products.enterEmailplaceholder}"
            type="Email"
			>
		</Input>

        <Label text="{appTxts>/products.fileUploaderMassiveReg}" labelFor="fileUploaderMassiveReg" />

		<u:FileUploader
			id="fileUploaderMassiveReg"
			name="myFileUpload"
			tooltip="{appTxts>/products.toolTipUpload}"
            fileType="xlsx"
            />
		<Button
			text="{appTxts>/products.btnUploadFile}"
			press="handleUploadPress"/>
            </l:VerticalLayout>
            </f:content>

			<f:footer>
				<OverflowToolbar>
                    <Button	text="{appTxts>/products.finish}" type="Emphasized" press="sendDataForNotification"/>
                    <ToolbarSpacer/>
                    <Button	text="{appTxts>/products.cancel}" type="Emphasized" press=".closeDialog('massiveRegisterDialog')"/>
                </OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
	</Dialog>
</core:FragmentDefinition>