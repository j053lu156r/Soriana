<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
    <Dialog title="{appTxts>/iupload.title}" class="sapUiContentPadding">
            <HBox id="uploadBoxAviso" alignContent="Center" alignItems="Center">
                <u:FileUploader
                id="fileUploaderAviso"
                name="myFileUpload"
                tooltip="{appTxts>/helpDocs.uploader.tooltip}"
                uploadComplete="handleUploadComplete"
                change="handleValueChange"
                style="Emphasized"
                fileType="{configSite>/updateFormatsSingle}"
                placeholder="{appTxts>/helpDocs.uploader.placeholder}">
                    <u:parameters>
                        <u:FileUploaderParameter
                            name="Accept-CH"
                            value="Viewport-Width"/>
                        <u:FileUploaderParameter
                            name="Accept-CH"
                            value="Width"/>
                        <u:FileUploaderParameter
                            name="Accept-CH-Lifetime"
                            value="86400"/>
                    </u:parameters>
                </u:FileUploader>
                <Button id="btnUpload" text="{appTxts>/notifications.save}" press="documentUploadPress" class="sapUiSmallMarginBegin"/>
            </HBox>
            <VBox>
                <List
                    id="logUploadListAviso"
                    mode="None"
                    items="{
                        path: '/Log/results'
                    }"
                    visible="false">
                    <items>
                        <StandardListItem
                            title="{Description}"
                            highlight="{path:'Sts', formatter: '.defineHighlight'}" />
                    </items>
                </List>
            </VBox>
        <buttons>
            <Button id="closeDialogAviso" text="{appTxts>/date.close}" press="onCloseDialogUpload"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>